APP="catsocket"

BUILD_HOST="catsocket.com"
BUILD_USER="deploy"
BUILD_AT="/tmp/edeliver/catsocket/builds"

STAGING_HOSTS="catsocket.com"
STAGING_USER="deploy"
DELIVER_TO="/opt/apps/catsocket_phoenix"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/deploy/prod.secret.exs"
  if [ $"TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -nsf '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}
